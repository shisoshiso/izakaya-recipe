= render "shared/second-header"
= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f|
  .form-wrap
    .form-header
      %h1.form-header-text
        アカウントを作成
    = render 'shared/error_messages', model: f.object
    .form-group
      .form-text-wrap
        %label.form-text 
          ニックネーム
          %span.indispensable 必須
      = f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) furima太郎", maxlength:"30"
    .form-group
      .form-text-wrap
        %label.form-text
          パスワード
          %span.indispensable 必須
      = f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字"
      %p.info-text ※半角英数字6文字以上で入力してください
    .form-group
      .form-text-wrap
        %label.form-text
          確認用のパスワード
          %span.indispensable 必須
      = f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力"
    .form-group
      %h2.form-bottom-text
        この登録を持って
        %span 利用規約
        と
        %span プライバシーポリシー
        に同意したことになります。
    .register-btn
      = f.submit "アカウントを作成する" ,class:"register-red-btn"

    .session-page
      = link_to 'すでにアカウントをお持ちですか？ログイン', new_user_session_path, class: "login nav-link"

    %p.text-center.mt-4
      = link_to 'ゲストログイン', users_guest_sign_in_path, class: "btn btn-secondary guest-login", method: :post

      
= render "shared/second-footer"

<%= render "shared/header" %>

<h1>ユーザー詳細ページ</h1>
<h3>ユーザー名<%= @user.nickname %></h3>
<h2>＜投稿内容一覧＞</h2>
<div class="contents row">
  <% @recipes.each do |recipe| %>
    <div class="content_post" style="background-image: url(<%= recipe.image %>);">
      <p>レシピ名：<%= recipe.name %></p>
      <span class="name">レシピの説明：<%= recipe.explanation %></span>
      <%= image_tag recipe.image.variant(resize: '500x500'), class: "item-img" if recipe.image.attached? %>
    </div>
  <% end %>
</div>

<%# <%= link_to "フォロー一覧・フォロワー一覧へ", users_path(current_user) %>
<h1>フォローユーザー一覧</h1>
  <% @followings.each do |user| %>
    <%= link_to "#{user.nickname}", user_path(user.id) %>
    <%= render 'relationships/follow_button', user: user %>
  <hr>
<% end %>

<h1>フォロワー一覧</h1>
  <% @followers.each do |user| %>
    <%= link_to "#{user.nickname}", user_path(user.id) %>
    <%= render 'relationships/follow_button', user: user %>
  <hr>
<% end %>

<h3>いいねしたレシピ一覧</h3>
<% @favorited.each do |recipe| %>
  <%= recipe.name %>
  <%= image_tag recipe.image.variant(resize: '500x500'), class: "item-img" if recipe.image.attached? %>
  <%= recipe.user.nickname %>
<% end %>

<%= link_to "ホームへ戻る", root_path %>